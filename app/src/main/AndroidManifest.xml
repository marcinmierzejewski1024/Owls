<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="marcinmierzejewski.com.owls" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/owl"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".BirdDescriptionListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BirdDescriptionDetailActivity"
            android:label="@string/title_birddescription_detail"
            android:parentActivityName=".BirdDescriptionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BirdDescriptionListActivity" />
        </activity>
    </application>

</manifest>
